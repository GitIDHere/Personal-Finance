<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dateNav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="end|center_vertical"
    >

    <ImageButton
        android:id="@+id/previousMonth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_previous_month"
        android:padding="0dp"
        android:theme="@style/flat_transparent_mat_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

    <TextView
        android:id="@+id/currentMonth"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Oct"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/seperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/currentYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:text="2016"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        android:layout_toLeftOf="@+id/nextMonth"
        />

    <ImageButton
        android:id="@+id/nextMonth"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/state_next_month_button"
        android:padding="0dp"
        android:theme="@style/flat_transparent_mat_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

</LinearLayout>